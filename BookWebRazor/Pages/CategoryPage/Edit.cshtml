@page "/category/edit"
@model BookWebRazor.Pages.CategoryPage.EditModel
@{
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="@Model.Category.Id" hidden />
            <div class="border p-3 mt-4">
                @* <div asp-validation-summary="ModelOnly"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Category.Name" type="text" class="form-control border-0 shadow" />
                    <label asp-for="@Model.Category.Name" class="ms-2"></label>
                    <span asp-validation-for="@Model.Category.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="@Model.Category.DisplayOrder" type="text" class="form-control border-0 shadow" />
                    <label asp-for="@Model.Category.DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="@Model.Category.DisplayOrder" class="text-danger"></span>
                </div>

                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-page="./index" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
